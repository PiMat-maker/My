<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <File name="FILE"
              fileName="logs/All.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="CLI_FILE"
              fileName="logs/Client.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="SERV_FILE"
              fileName="logs/Server.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="ru.ifmo.se.lab6.client.Client" level="info" additivity="true">
            <AppenderRef ref="CLI_FILE"/>
        </Logger>

        <Logger name="ru.ifmo.se.lab6.server.Server" level="info" additivity="true">
            <AppenderRef ref="SERV_FILE"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="all">
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>


</Configuration>